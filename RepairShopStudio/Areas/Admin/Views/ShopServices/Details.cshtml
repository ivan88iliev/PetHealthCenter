@model ShopServiceDetailsModel

@{
    ViewBag.Title = "Part service";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container">
    
    <h4 class="heading-margin">@ViewData["Title"]</h4>
    <h2 class="heading-margin text-center"> </h2>

    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" type="text" readonly="" asp-for="Name">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Price"></label>
        <input class="form-control" type="text" readonly="" value="@Math.Round(Model.Price, 2)">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Description"></label>
        <input class="form-control" type="text" readonly="" asp-for="Description">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="VehicleComponent"></label>
        <input class="form-control" type="text" readonly="" asp-for="VehicleComponent">
    </div>

    <div class="mb-3">
        <a asp-controller="ShopServices" asp-action="All" class="btn btn-success">Done</a>
        <a asp-controller="ShopServices" asp-action="Edit" asp-route-Id="@Model.Id" class="btn btn-warning">Edit</a>
    </div>

</div>
