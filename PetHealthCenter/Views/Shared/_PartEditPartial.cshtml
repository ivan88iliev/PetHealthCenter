@model EditPartViewModel


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form>
            <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Name...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" placeholder="Description...">
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer"></label>
                <textarea asp-for="Manufacturer" rows="4" class="form-control" placeholder="Manufacturer..."></textarea>
                <span asp-validation-for="Manufacturer" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OriginalMpn"></label>
                <input asp-for="OriginalMpn" class="form-control">
                <span asp-validation-for="OriginalMpn" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceSell"></label>
                <input asp-for="PriceSell" class="form-control">
                <span asp-validation-for="PriceSell" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock"></label>
                <input asp-for="Stock" class="form-control">
                <span asp-validation-for="Stock" class="small text-danger"></span>
            </div>

            <div class="text-center" >
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
