@model IEnumerable<HealthServiceViewModel>

@{
    ViewBag.Title = "Pet health services";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var service in Model)
    {
        <div class="card col-4" style="width: 14rem;">
            <div class="card-body">

                <h5 class="card-title mt-1">@service.Name</h5>
                <p class="mb-0">Short description: @service.Description</p>
                <p class="mb-0">Price: @String.Format("{0:f2}",service.Price)</p>
                <p class="mb-0">Product component: @service.ProductComponent</p>
            </div>
            <div class="form-inline">
                @if (User.IsInRole(RoleConstants.Administrator))
                {
                    <a asp-controller="HealthServices" asp-action="Edit" asp-route-Id="@service.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-controller="HealthServices" method="post">
                        <input name="id" type="hidden" value="@service.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                }
            </div>
        </div>
    }
</div>